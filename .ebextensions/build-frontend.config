container_commands:
    01 setup nodejs: 
        command: |
            curl -o- https://raw.githubusercontent.com/nvm-sh/nvm/v0.34.0/install.sh | bash
            source ~/.nvm/nvm.sh
            nvm install node
        leader_only: true
    02 install dependencies:
        command: npm install
        cwd: /tmp/deployment/application/frontend
        leader_only: true
    03 build:
        command: npm build
        cwd: /tmp/deployment/application/frontend
        leader_only: true
    04 move artifacts:
        command: cp  /tmp/deployment/application/frontend/build/*  /tmp/deployment/application/public
        leader_only: true
