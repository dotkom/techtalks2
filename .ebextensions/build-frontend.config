packages:
    yum:
        gcc-c++: []
        make: []
container_commands:
    01 get node repo: 
        command: curl -sL https://rpm.nodesource.com/setup_12.x | sudo -E bash -
        leader_only: true
    02 install node: 
        command: yum install -y nodejs
        leader_only: true
    03 install dependencies:
        command: npm install
        cwd: /tmp/deployment/application/frontend
        leader_only: true
    04 build:
        command: npm build
        cwd: /tmp/deployment/application/frontend
        leader_only: true
    05 move artifacts:
        command: cp  /tmp/deployment/application/frontend/build/*  /tmp/deployment/application/public
        leader_only: true
